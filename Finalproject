    cout<<"\n 9.orange";
    cout<<"\n 10.grapes";  
    cout<<"\nEnter your choice:";
    cin>>ch;
    switch(ch)
    { 
        case 1:
        a=tomatoes();
        break; 
        case 2:
        b=onion();
        break; 
        case 3:
        c=potatoes();
        break;
        case 4:
